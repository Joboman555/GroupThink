<div id="signup" class="modal fade modal-keyboard" tabindex="-1">
  <div class="modal-dialog modal-login">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title">Sign Up!</h4>
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
      </div>
      <div class="modal-body">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>
          <div class="form-group">
            <i class="glyphicon glyphicon-user"></i>
            <%= f.text_field :username, autofocus: true, autocomplete: "username", placeholder: "Username", class: "form-control", required:true %>
          </div>

          <div id="email" class="form-group">
            <i class="glyphicon glyphicon-envelope"></i>
            <%= f.email_field :email, autocomplete: "email", placeholder: "E-mail", class: "form-control", required: true %>
          </div>
          <span class="email-statement">(This will not be shown to other users. We will never send you spam.)</span>

          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <div class="form-group">
            <i class="glyphicon glyphicon-lock"></i>
            <%= f.password_field :password, autocomplete: "off", class: "form-control", required: true, placeholder: "Password" %>
          </div>

          <div class="form-group">
            <i class="glyphicon glyphicon-lock"></i>
            <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", required: true, placeholder: "Confirm Password" %>
          </div>

          <div class="form-group">
            <input type="submit" class="btn btn-primary btn-block btn-lg" value="Sign up">
          </div>
        <% end %>
      </div>
      <div class="modal-footer" role="group">
        <div class="container-fluid">
          <div><%= link_to "Login", "#login", "data-dismiss" => "modal", "data-toggle" => "modal" %></div>
        </div>
      </div>
    </div>
  </div>
</div>
